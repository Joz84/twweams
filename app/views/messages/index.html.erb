
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for @message, url: connection_messages_path(@connection), method: :post do |f| %>
        <%= f.input :content, autofocus: true, :input_html => {"data-behavior" => "chat_speaker"}  %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <% @messages.each do |message| %>
    <div class="row">
      <% if message.user == current_user %>
        <div class="col-xs-11 col-sm-6">
            <div class="content-message me">
              <h4><%= message.user.first_name.capitalize %></h4>
              <div class="list">
                <p><%= message.content %></p>
                <%= link_to connection_message_path(@connection, message), method: :delete do %>
                  <i class="fa fa-trash-o" aria-hidden="true"></i>
                <% end %>
              </div>
            </div>
        </div>
      <% else %>
        <div class="col-xs-11 col-xs-offset-1 col-sm-6 col-sm-offset-6">
          <div class="content-message">
            <h4><%= message.user.first_name.capitalize %></h4>
            <p><%= message.content %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
