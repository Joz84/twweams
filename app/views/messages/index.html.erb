<br>

<div class="fluid-container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= simple_form_for @message, url: connection_messages_path(@connection), method: :post do |f| %>
        <%= f.input :content, autofocus: true %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>

      <br>

      <% @messages.each do |message| %>

        <div class="container">
        <div class="row">

        <% if message.user == current_user %>

          <div class="col-xs-6 col-xs-offset-6">
            <div class="content-message me">
              <h4><%= message.user.first_name.capitalize %></h4>
              <div class="list">
                <p><%= message.content %></p>
                <%= link_to method: :delete do %>
                  <i class="fa fa-trash-o" aria-hidden="true"></i>
                <% end %>
              </div>
            </div>
          </div>

        <% else %>

          <div class="col-xs-6">
            <div class="content-message">
              <h4><%= message.user.first_name.capitalize %></h4>
              <p><%= message.content %></p>
            </div>
          </div>

        <% end %>
        </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
