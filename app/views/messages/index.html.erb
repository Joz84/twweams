<br>

<div class="fluid-container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= simple_form_for @message, url: connection_messages_path(@connection), method: :post do |f| %>
        <%= f.input :content %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>

      <br>

      <% @messages.each do |message| %>

        <% if message.user == current_user %>
          <div id="right">
        <% else %>
          <div id="left">
        <% end %>

        <h4><%= message.user.first_name.capitalize + ' said' %></h4>
        <p><%= message.content %></p>

        <% if message.user == current_user %>
          <%= link_to method: :delete do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
        <% end %>

        </div>

      <% end %>
    </div>
  </div>
</div>

