<div class="fluid-container">
  <div class="row">
    <div class="col-xs-12">
      <div class="banner">
        <%= link_to root_path do %>
          <i class="fa fa-arrow-circle-o-left fa-3x" aria-hidden="true" id="arrow"></i>
        <% end %>
        <%= image_tag 'logo_twweams', class: 'profile-picture' %>
      </div>
      <div class="banner-name">
        <p class='name'><%= @user.full_name %> </p>
        <p class='city'><%= @user.location %> </p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-xs-12" id="one">
      <div class="banner-description">
        <p class='title'> About <%= @user.first_name %> </p>
        <p><%= @user.bio %></p>
        <p class='text'> "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Pariatur quisquam enim omnis ducimus tempore molestiae ullam exercitationem repellat vero, voluptas. Earum qui nam mollitia officiis? Corporis quasi quis labore dolor." </p>
      </div>
    </div>

    <div class="col-md-6 col-xs-12" id="two">
      <div class="banner-description">
        <p class='title'> Preferences </p>
        <p class='text'> Movie </p>
        <hr>
        <p class='text'> Music </p>
        <hr>
        <p class='text'> Book </p>
      </div>
    </div>
  </div>

      <div id="map" style="width: 100%; height: 30vh;">
        <% content_for(:after_js) do %>
          <script>
            $(document).ready(function() {
              var handler = Gmaps.build('Google');
              var isDraggable = $(document).width() > 480 ? true : false;
              handler.buildMap({ provider: { scrollwheel: false, zoomcontrol: true,
                                  draggable: isDraggable }, internal: { id: 'map' } }, function() {
                markers = handler.addMarkers(<%= raw @hash.to_json %>);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                handler.getMap().setZoom(11);
              });
            });
          </script>
        <% end %>
      </div>



</div>
