<div class="main-banner" style="background-image: linear-gradient(-225deg, rgba(10, 10, 10, 0.4) 0%, rgba(10, 10, 10, 0.4) 50%), url(<%= asset_path 'main.jpg' %>);">

    <div class="form-one">
      <%= simple_form_for :birthday, url: birthday_path, method: :get do |f| %>
        <%= f.input :birthdate, as: :date, start_year: Date.today.year - 110, end_year: Date.today.year, label: "Enter your birthday" %>
        <%= f.button :submit, 'Go!', class: "btn btn-success" %>
      <% end %>
    </div>
</div>
