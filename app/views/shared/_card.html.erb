

  <div class="small-7 medium-5 large-4 column end small-centered card">
    <div class="card-top" style="background-image: url('<%= user.photo ? cl_image_path(user.photo.path) : cl_image_path("logo_jnrmwq.png") %>');">
      <%= link_to show_path(user.id) do %>
        <div class="overlay">
          <h1>Go!</h1>
        </div>
      <% end %>
    </div>
    <div class="triangle">
      <div id="circleDrop<%= user.id %>" class="circle-button">
        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/324479/close.svg" class="close" id="close<%= user.id %>"/>
      </div>
    </div>
    <div class="card-middle" id="card-<%= user.id %>">
      <h5 class="more"><%= user.bio %></h5>
    </div>
    <div class="card-bottom text-center">
      <h2 class="card-title"><%= user.full_name %></h2>
    </div>
  </div>

<% content_for :card_js do %>
  <script type="text/javascript">
      $('#circleDrop<%= user.id %>').click(function() {
        $('#card-<%= user.id %>').slideToggle();
        $('#close<%= user.id %>').toggleClass('closeRotate');
      });
  </script>
<% end %>
