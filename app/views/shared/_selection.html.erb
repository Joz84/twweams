<div class="wrapper-selection">
  <div class="container">

    <div class="row">
      <div class="col-sm-3 col-xs-12">
        <%= simple_form_for :selection, url: selection_path, method: :get do |f| %>
        <%= f.input :birthdate, as: :date, start_year: Date.today.year - 110, end_year: Date.today.year, label: false %>
        </div>
        <div class="col-sm-6 col-xs-12">
          <div class="space-between">
            <div id="km-1"><p>0 km</p></div>
            <input class="ps7" type="range" name="length" style="width:100%;margin-bottom:10px;background: none;">
            <div id="km-2"><p>20000 km</p></div>
          </div>
        </div>
        <div class="col-sm-2 col-xs-8">
        <div class="space-between">
          <%= f.collection_radio_buttons :gender, [[true, 'Male'] ,[false, 'Female']], :first, :last,style: "font-style:light;", default: true %>
          </div>
        </div>
        <div class="col-sm-1 col-xs-4">
          <%= f.button :submit, 'Find', class: "button-find" %>
        </div>
          <% end %>
        </div>
      </div>
    </div>

</div>

